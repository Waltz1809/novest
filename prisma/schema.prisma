// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ================= 1. MODEL CHO NEXTAUTH (MỚI THÊM) =================
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials-based login
  nickname      String? // Display name, fallback to name if not set
  role          String    @default("READER") // ADMIN, MODERATOR, READER

  accounts Account[]
  sessions Session[]

  // Quan hệ với Ví tiền & Truyện
  wallet Wallet?

  // Các bảng tương tác
  library        Library[]
  readingHistory ReadingHistory[]
  purchases      UserPurchase[]
  novels         Novel[]
  comments       Comment[]
  ratings        Rating[]

  // Thông báo
  notifications          Notification[] @relation("UserNotifications")
  triggeredNotifications Notification[] @relation("ActorNotifications")

  createdAt DateTime @default(now())

  // Identity
  username         String?           @unique // Unique handle for URLs
  badges           UserBadge[]
  commentReactions CommentReaction[]

  // Admin features
  isBanned  Boolean  @default(false)
  banReason String?
  tickets   Ticket[]

  // Age verification for R18 content
  birthday DateTime?

  // Recommendation preferences
  preference UserPreference?
}

model Ticket {
  id     String @id @default(cuid())
  userId String

  // Main branch: REPORT, BUG, SUPPORT, FIX_CHAPTER, STATUS_CHANGE
  mainType String  @default("BUG")
  // Sub branch (for REPORT): NOVEL_QUALITY, SPAM_COMMENT, TOS_VIOLATION
  // Sub branch (for STATUS_CHANGE): REQUEST_COMPLETE, REQUEST_HIATUS, etc.
  subType  String?

  title       String
  description String

  // For FIX_CHAPTER / STATUS_CHANGE tickets - optional references
  chapterId Int?
  novelId   Int?

  status String @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter? @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  novel   Novel?   @relation(fields: [novelId], references: [id], onDelete: SetNull)

  @@index([mainType, status])
}

// User recommendation preferences
model UserPreference {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Comma-separated values for nations: "CN", "JP", "KR"
  nations  String @default("")
  // Comma-separated genre IDs
  genreIds String @default("")

  // Onboarding status
  skipped Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Badge {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String // URL or icon name
  color       String? // Hex code or tailwind class
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users UserBadge[]
}

model UserBadge {
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@id([userId, badgeId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Notification {
  id           String   @id @default(cuid())
  userId       String
  actorId      String?
  type         String // NEW_CHAPTER, REPLY_COMMENT, SYSTEM, LIKE_REVIEW
  resourceId   String
  resourceType String
  message      String
  isRead       Boolean  @default(false)
  createdAt    DateTime @default(now())

  user  User  @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  actor User? @relation("ActorNotifications", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([userId, isRead])
  @@index([createdAt])
}

// ================= 2. MODEL VÍ TIỀN (MỚI THÊM) =================
model Wallet {
  id      String @id @default(cuid())
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
  balance Int    @default(0) // Số dư xu

  transactions Transaction[]
}

model Transaction {
  id          String  @id @default(cuid())
  walletId    String
  wallet      Wallet  @relation(fields: [walletId], references: [id])
  amount      Int
  type        String // DEPOSIT, PURCHASE...
  description String?

  createdAt DateTime @default(now())
}

// ================= 3. MODEL TRUYỆN (GIỮ NGUYÊN NHƯ FILE BẠN GỬI) =================
model Novel {
  id          Int     @id @default(autoincrement())
  title       String
  slug        String  @unique
  author      String
  artist      String? // Họa sĩ (optional)
  description String?
  status      String  @default("ONGOING") // ONGOING, COMPLETED, HIATUS, DROPPED
  coverImage  String?
  viewCount   Int     @default(0)

  // Search & SEO
  alternativeTitles String? // Tên khác
  originalName      String? // Tên gốc (private - chỉ admin/mod/uploader thấy)
  searchIndex       String? // Index tìm kiếm (slug hóa của title + author + alt)

  // Novel classification
  nation      String @default("CN") // CN, JP, KR
  novelFormat String @default("WN") // WN (Web Novel), LN (Light Novel)

  // Approval workflow
  approvalStatus  String  @default("PENDING") // PENDING, APPROVED, REJECTED
  rejectionReason String?
  rejectionCount  Int     @default(0) // 3 rejections = permanent delete

  // Discount for completed novels (uploader can set 10-100%)
  discountPercent Int @default(0)

  // R18/Adult content flag
  isR18 Boolean @default(false)

  volumes        Volume[]
  genres         Genre[]
  library        Library[]
  readingHistory ReadingHistory[]
  tickets        Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  uploaderId String
  uploader   User      @relation(fields: [uploaderId], references: [id], onDelete: Cascade)
  comments   Comment[]
  ratings    Rating[]

  @@index([approvalStatus])
  @@index([nation, novelFormat])
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  slug   String  @unique
  novels Novel[]
}

model Volume {
  id    Int    @id @default(autoincrement())
  title String
  order Int

  novelId Int
  novel   Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapters Chapter[]
}

model Chapter {
  id       Int     @id @default(autoincrement())
  title    String
  slug     String  @unique
  content  String
  order    Float // Changed to Float to support fractional chapters (e.g., 1.5)
  isLocked Boolean @default(false)
  price    Int     @default(0)

  volumeId Int
  volume   Volume @relation(fields: [volumeId], references: [id])

  // Draft/Publish system
  isDraft   Boolean   @default(true) // New chapters start as drafts
  publishAt DateTime? // Scheduled publish time (null = not scheduled)

  purchases        UserPurchase[]
  readingHistories ReadingHistory[]
  comments         Comment[]
  tickets          Ticket[]
  versions         ChapterVersion[] // Version history for reverting

  createdAt DateTime @default(now())
  wordCount Int      @default(0)

  @@index([isDraft, publishAt])
}

model UserPurchase {
  userId    String
  chapterId Int
  price     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  chapter   Chapter  @relation(fields: [chapterId], references: [id])

  @@id([userId, chapterId])
}

model Library {
  userId    String
  novelId   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}

model ReadingHistory {
  userId    String
  novelId   Int
  chapterId Int
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel   Novel   @relation(fields: [novelId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}

// ================= 4. MODEL TƯƠNG TÁC (COMMENTS & RATINGS) =================
model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Pin functionality - max 3 pins per novel
  isPinned Boolean   @default(false)
  pinnedAt DateTime?
  pinnedBy String? // userId who pinned

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  novelId Int
  novel   Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapterId Int?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  paragraphId Int? // 0-based index of the paragraph for inline comments

  parentId  Int?
  parent    Comment?          @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  children  Comment[]         @relation("CommentReplies")
  reactions CommentReaction[]

  @@index([chapterId, paragraphId])
  @@index([novelId, isPinned])
}

model CommentReaction {
  id        String   @id @default(cuid())
  userId    String
  commentId Int
  type      String // UPVOTE, DOWNVOTE
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
}

model Rating {
  userId    String
  novelId   Int
  score     Int // 1-5
  content   String?
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}

// ================= 5. CHAPTER VERSIONING (EXPERIMENTAL) =================
// This stores chapter history for 1 week to enable reverting.
// To remove: Delete this model and related code in actions/chapter.ts
model ChapterVersion {
  id        Int     @id @default(autoincrement())
  chapterId Int
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  title     String
  content   String
  wordCount Int

  createdAt DateTime @default(now())
  expiresAt DateTime // Auto-cleanup after 1 week

  @@index([chapterId])
  @@index([expiresAt])
}

// ================= 6. SITE ANNOUNCEMENTS =================
// Banner notifications shown to users once per day
model Announcement {
  id        String    @id @default(cuid())
  title     String // Short title for admin reference
  content   String // HTML content (supports images, emoji, formatting)
  isActive  Boolean   @default(true)
  startDate DateTime  @default(now())
  endDate   DateTime? // null = no expiration

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
