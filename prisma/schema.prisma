// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Novel {
  id          Int     @id @default(autoincrement()) // Quan trọng: Phải là Int và autoincrement
  title       String
  slug        String  @unique
  author      String
  description String?
  status      String  @default("ONGOING")
  coverImage  String?

  volumes Volume[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Volume {
  id    Int    @id @default(autoincrement())
  title String
  order Int

  novelId Int
  novel   Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapters Chapter[]
}

model Chapter {
  id       Int     @id @default(autoincrement()) // Đổi sang Int cho nhẹ đầu lúc này
  title    String
  content  String
  order    Int
  isLocked Boolean @default(false)
  price    Int     @default(0)

  volumeId Int
  volume   Volume @relation(fields: [volumeId], references: [id])
}

