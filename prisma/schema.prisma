// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ================= 1. MODEL CHO NEXTAUTH (MỚI THÊM) =================
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials-based login
  nickname      String? // Display name, fallback to name if not set
  role          String    @default("READER") // ADMIN, TRANSLATOR, READER

  accounts Account[]
  sessions Session[]

  // Quan hệ với Ví tiền & Truyện
  wallet Wallet?

  // Các bảng tương tác
  library        Library[]
  readingHistory ReadingHistory[]
  purchases      UserPurchase[]
  novels         Novel[]
  comments       Comment[]
  ratings        Rating[]

  // Thông báo
  notifications          Notification[] @relation("UserNotifications")
  triggeredNotifications Notification[] @relation("ActorNotifications")

  createdAt DateTime @default(now())

  // Identity
  username         String?           @unique // Unique handle for URLs
  badges           UserBadge[]
  commentReactions CommentReaction[]
}

model Badge {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String // URL or icon name
  color       String? // Hex code or tailwind class
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users UserBadge[]
}

model UserBadge {
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@id([userId, badgeId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Notification {
  id           String   @id @default(cuid())
  userId       String
  actorId      String?
  type         String // NEW_CHAPTER, REPLY_COMMENT, SYSTEM, LIKE_REVIEW
  resourceId   String
  resourceType String
  message      String
  isRead       Boolean  @default(false)
  createdAt    DateTime @default(now())

  user  User  @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  actor User? @relation("ActorNotifications", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([userId, isRead])
  @@index([createdAt])
}

// ================= 2. MODEL VÍ TIỀN (MỚI THÊM) =================
model Wallet {
  id      String @id @default(cuid())
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
  balance Int    @default(0) // Số dư xu

  transactions Transaction[]
}

model Transaction {
  id          String  @id @default(cuid())
  walletId    String
  wallet      Wallet  @relation(fields: [walletId], references: [id])
  amount      Int
  type        String // DEPOSIT, PURCHASE...
  description String?

  createdAt DateTime @default(now())
}

// ================= 3. MODEL TRUYỆN (GIỮ NGUYÊN NHƯ FILE BẠN GỬI) =================
model Novel {
  id          Int     @id @default(autoincrement())
  title       String
  slug        String  @unique
  author      String
  description String?
  status      String  @default("ONGOING")
  coverImage  String?
  viewCount   Int     @default(0)

  // Search & SEO
  alternativeTitles String? // Tên khác
  searchIndex       String? // Index tìm kiếm (slug hóa của title + author + alt)

  volumes        Volume[]
  genres         Genre[]
  library        Library[]
  readingHistory ReadingHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  uploaderId String
  uploader   User      @relation(fields: [uploaderId], references: [id], onDelete: Cascade)
  comments   Comment[]
  ratings    Rating[]
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  slug   String  @unique
  novels Novel[]
}

model Volume {
  id    Int    @id @default(autoincrement())
  title String
  order Int

  novelId Int
  novel   Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapters Chapter[]
}

model Chapter {
  id       Int     @id @default(autoincrement())
  title    String
  slug     String  @unique
  content  String
  order    Float // Changed to Float to support fractional chapters (e.g., 1.5)
  isLocked Boolean @default(false)
  price    Int     @default(0)

  volumeId Int
  volume   Volume @relation(fields: [volumeId], references: [id])

  purchases        UserPurchase[]
  readingHistories ReadingHistory[]
  comments         Comment[]

  createdAt DateTime @default(now())
  wordCount Int      @default(0)
}

model UserPurchase {
  userId    String
  chapterId Int
  price     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  chapter   Chapter  @relation(fields: [chapterId], references: [id])

  @@id([userId, chapterId])
}

model Library {
  userId    String
  novelId   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}

model ReadingHistory {
  userId    String
  novelId   Int
  chapterId Int
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel   Novel   @relation(fields: [novelId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}

// ================= 4. MODEL TƯƠNG TÁC (COMMENTS & RATINGS) =================
model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  novelId Int
  novel   Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapterId Int?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  parentId  Int?
  parent    Comment?          @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  children  Comment[]         @relation("CommentReplies")
  reactions CommentReaction[]
}

model CommentReaction {
  id        String   @id @default(cuid())
  userId    String
  commentId Int
  type      String // UPVOTE, DOWNVOTE
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
}

model Rating {
  userId    String
  novelId   Int
  score     Int // 1-5
  content   String?
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@id([userId, novelId])
}
